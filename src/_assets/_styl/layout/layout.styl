.content
	//debug()
	overflow: hidden
	width: 100%
	margin: $small-spacing 0
	
	+above('l')
		margin-bottom: $spacing
	
.sidebar
	//debug()
	overflow: hidden
	width: 100%
	margin: $large-spacing 0

