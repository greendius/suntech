// ---------------------------
// + 	Page layout
//		2 columns
//			1 sidebar
//			1 content
// ---------------------------
.l-page
	//debug()
	
	+above('l')
		.content
			lost-column: 2/4
		
		.sidebar
			lost-column: 1/4
		
// ---------------------------
// + 	2 Columns
//			Left sidebar
//			Right sidebar
// ---------------------------
.l-2-cols // Left sidebar - default
	
	+above('l')
		.sidebar
			lost-column: 1/4
		
		.content
			lost-column: 3/4
		
.l-sidebar-r // Right sidebar
		
	+above('l')
		.sidebar
			lost-move: 3/4
	
		.content
			lost-move: -1/4
		

