// ==============================================================
// == 	Base
// ==============================================================

// ---------------------------
// +	Reset
// ---------------------------
*,
*:before,
*:after
	-webkit-box-sizing: inherit
	-moz-box-sizing: inherit
	box-sizing: inherit
	margin: 0
	padding: 0
	
h1,
figure,
fieldset
	margin: 0

// html,
// body
// 	height: 100%
// 	overflow-x: hidden

// body
// 	width: 100%
// 	overflow-y: scroll

img,
video,
audio,
embed,
object,
input,
iframe
	max-width: 100%

// ---------------------------
// +	Html
// ---------------------------
	
html
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box
	background: $site-bg-color

body
	font-family: $th-font-family
	font-size: $font-size
	-webkit-font-smoothing: antialiased
	line-height: $line-height
	color: $font-color

// ---------------------------
// +	Heading
// ---------------------------
h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
	margin: 0 0 $spacing
	line-height: $heading-line-height
	font-family: $th-heading-font-family
	font-weight: $heading-font-weight
	color: $heading-font-color

p
	margin-bottom: $spacing

a
	display: inline-block
	position: relative
	color: $action-color
	text-decoration: none

	&:active,
	&:focus,
	&:hover
		color: darken($action-color, 15%)
	&:active,
	&:focus
		outline: none

// ---------------------------
// +	List
// 		ul, ol, li, dl, dt, dd
// ---------------------------
ul,
ol
	//debug()
	padding: 0
	line-height: $line-height
	
	list-style: disc outside
	margin: 0 0 $spacing
	//margin-left: $small-spacing
		
	li
		position: relative
		left: 1em
		//padding-right: 1em

ul
	list-style: disc outside

ul li ul li
	list-style-type: circle
	padding-left: 1em

ol
	list-style: decimal inside

ol li ol li
	list-style-type: decimal
	padding-left: 1em

dl
	margin-bottom: $spacing
	dt
		font-weight: bold
		margin-top: $small-spacing
	dd
		margin: 0

// ---------------------------
// +	Table
// ---------------------------
table
	table() // table($border,$striped,$condensed)
	margin: $spacing auto

// ---------------------------
// +	Code
// ---------------------------
code,
kbd,
pre
	font-family: $monospace-font-family
	font-size: 12px

kbd
	padding: $small-spacing / 2 $small-spacing
	color: #fff
	background-color: $darker-gray
	border-radius: $border-radius
	box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.25)

// Preformatted Text
pre
	display: block
	padding: $spacing
	margin: 0 0 $spacing
	line-height: $line-height
	word-break: break-all
	word-wrap: break-word
	color: #333
	background-color: #f5f5f5
	border: 1px solid $border-color
	border-radius: $border-radius
	overflow-x: auto

code
	padding: 3px 4px
	color: #c7254e
	background-color: #f9f2f4
	border-radius: $border-radius

pre > code
	color: #333
	background-color: none

// ---------------------------
// +	Others
// ---------------------------
hr
	border-bottom: 1px solid $border-color
	border-left: none
	border-right: none
	border-top: none
	margin: $spacing 0

img,
picture
	margin: 0
	max-width: 100%
	vertical-align: middle

abbr,
acronym
	cursor: help
	border-bottom: 1px dotted $border-color

// .lead
// 	font-size: $large-font-size * 1.2

input,
label,
select
	// display: inline-block
	// width: auto
	// max-width: 100%
	// margin-bottom: $spacing
	// font-family: $font-family
	// font-size: $small-font-size

input[type=text],
textarea
	input()
	max-width: 100%
	font-size: $small-font-size
	font-family: $font-family

label
	label()
	//font-weight: bold
	font-size: $small-font-size

	// &.required::after
	//  	content: "*"

	// abbr
	//  	display: none
		
textarea
	resize: vertical
	
fieldset
	background-color: $secondary-background-color
	border: 1px solid $border-color
	margin: 0 0 $small-spacing
	padding: $spacing
		
blockquote
	padding: .5rem $spacing
	margin: 0 0 $spacing
	font-size: $large-font-size
	border-left: 1px solid $primary-color

	p
		margin: 0
		
address
	font-style: normal
	font-size: .9em