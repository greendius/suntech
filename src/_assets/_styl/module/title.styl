// ==============================================================
// == Page Title
// ==============================================================
.header-title
	//debug()
	cf()

	margin: $spacing 0
	
	+above('l')
		position: absolute
		bottom: 80px
		left: 50px
		
	
	.page-title
		position: relative
		
		width: auto
		padding: 10px $large-spacing
		margin-bottom: 0
		color: #fff
		background: $primary-color
		border-left: 7px solid $black
		
		+above('l')
			//padding: $spacing $large-spacing
			padding-left: 80px
			min-width: 350px
			color: $font-color
			
			background-color: rgba(255, 255, 255, 0.8)
			border-left: 0
			
			&::before
				content: ''
				
				position: absolute
				top: 0
				left: 0
				
				width: 60px
				height: 100%

				background: $action-color url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAD0lEQVQImWNgQAX/yeAAAIHCA/0RE2WAAAAAAElFTkSuQmCC') repeat
