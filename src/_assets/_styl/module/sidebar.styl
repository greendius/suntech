// ==============================================================
// == 	Sidebar & Widget
// ==============================================================
.sidebar
	//background: $black
		
	.sidebar__title
		@extend h4
		margin-bottom: $small-spacing
	
	+above('l')
		padding-left: $spacing
		border-left: 1px solid $border-color
		
.page-about .sidebar,
.page-contact .sidebar
	border-left: 0
	padding-left: 0
	
.widget
	//debug()
	cf()
	padding: $small-spacing $spacing
	margin-bottom: $small-spacing
	border: 1px solid $gray
	box-shadow: 0 0 4px 0 rgba( 0, 0, 0, 0.06 )
	
	+above('l')
		// margin-bottom: $spacing
		border: 0
		box-shadow: none
	
	.widget__title
		padding: 3px 7px
		margin-bottom: $spacing
		color: #fff
		background: $primary-color
		border-left: 5px solid $black
		
// ---------------------------
// + 	Gallery Widget
// ---------------------------
.widget-gallery
	
	+at(3)
		lost-waffle: 1/2 3 10px
		border: 0
		box-shadow: none
		//outline: 2px dashed aqua
		
	+above('l')
		padding-left: 0
		padding-right: 0
	
	ul
		list-style: none
	
	.widget-gallery__items
		lost-waffle: 1/3 3 3px
		position: relative
		left: 0
		
		padding: 0
		height: 70px
		overflow: hidden
		
		border: 1px solid $darker-gray

		.widget-gallery__link
			display: flex
			align-items: auto
			width: auto
			height: 70px
		
			+above('l')
				opacity: .8
				transition: opacity .5s ease-out

		.widget-gallery__link:hover
			opacity: 1
			
		img
			margin: auto
		
// ---------------------------
// + 	Address Widget
// ---------------------------
.widget-address
	padding: $spacing
	
	+at(3)
		padding: $large-spacing
		border-left: 7px solid $primary-color
	
	+above('l')
		padding: $spacing
		border-left: 7px solid $primary-color
		
	ul
		margin-bottom: 0
		
.page-contact .widget-address
	+above('l')
		border-left: 0
		padding-left: 0