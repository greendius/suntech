// ---------------------------
// = Main menu
// ---------------------------
.main-menu
	//debug()
	
	.menu
		cf()
		float: none
		
		.menu__item
			position: relative
			left: 0
			display: block
			
		.menu__link
			display: block
			padding: 7px 20px
					
			font-family: $th-heading-font-family
			font-weight: 400
			fs: 25px
			
			color: $font-color
			
			border-bottom: 1px solid $border-color
			border-radius: 0
			
		.menu__link:hover
			color: #fff
			//border-radius: 3px
			
		.menu__link--current
			color: #fff
			background: $primary-color
			//border-radius: 3px
	
	+above('m')
		.menu
			float: right
			//height: 83px
			
			margin: 0
			padding: 30px 0
			
			line-height: 1

			.menu__item
				display: inline-block
				margin: 0
				
			.menu__link
				border-bottom: 0